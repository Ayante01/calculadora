<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/btn_text_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:padding="20dp"
        android:textSize="50sp"
        android:textColorHint="@color/numbers"
        ></TextView>
    <TextView
        android:id="@+id/btn_text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:textSize="50sp"
        android:textColorHint="@color/numbers"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_uno"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="1"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_dos"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="2"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_tres"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="3"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_reiniciar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="ac"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/actions"
                    ></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_cuatro"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="4"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_cinco"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="5"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_seis"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="6"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_sumar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="+"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/actions"
                    ></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_siete"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="7"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_ocho"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="8"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_nueve"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="9"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_restar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="-"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/actions"
                    ></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_cero"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="0"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/buttons"
                    ></Button>
                <Button
                    android:id="@+id/btn_multiplicar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="*"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/actions"
                    ></Button>
                <Button
                    android:id="@+id/btn_dividir"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="/"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/actions"
                    ></Button>
                <Button
                    android:id="@+id/btn_resultado"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="="
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:textColor="@color/numbers"
                    android:backgroundTint="@color/actions"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>